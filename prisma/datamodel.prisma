type User{
    id: ID! @id
    name: String!
    email: String! @unique
    phone: String! @unique
    level: Class! @relation(name:"UserLevel")
    password: String!
    createdAt: DateTime! @createdAt
}
type Class{
    id: ID! @id
    label: String!
    description: String!
    illustration: String!
    courses: [Course] @relation(name:"ClassCourse")
    subjects: [Subject] @relation(name:"ClassSubject")
    students: [User] @relation(name:"UserLevel")
    createdAt: DateTime! @createdAt
}
type Course{
    id: ID! @id
    chapterNumber: Int!
    title: String!
    description: String!
    illustration: String!
    pdfLink: String
    videoLink: String
    level: Class @relation(name:"ClassCourse")
    createdAt: DateTime! @createdAt
}
type Subject{
    id: ID! @id
    title: String!
    description: String!
    illustration: String!
    td: String!
    correction: String
    level: Class @relation(name:"ClassSubject")
}